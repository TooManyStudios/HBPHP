{%  extends "::base.html.twig" %}

{%  block body %}
	<h3>Liste des auteurs</h3>
	<a href="{{ path("auteur_add") }}">Ajouter un nouvel auteur</a><hr>
	<div class="well">
	<ul>
	{% for auteur in auteurs %}
	<li>
	Id : {{ auteur.id }} <br>
	Nom complet : {{ auteur.prenom }} {{ auteur.nom }} <br>
	Pseudo : {{ auteur.pseudo }} <br>
	Actions : <a href="{{ path("auteur_edit", {'id':auteur.id}) }}">Editer</a> -
	<a href="{{ path("auteur_delete", {'id':auteur.id}) }}">Supprimer</a><hr>
	</li>
	{% else %}
	<li>Aucun auteur trouv√©</li>
	{% endfor %}
	</ul>
	</div>
{%  endblock %}