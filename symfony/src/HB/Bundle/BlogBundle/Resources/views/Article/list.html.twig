{%  extends "::base.html.twig" %}

{%  block body %}
	<h3>Liste des articles</h3>
	<a href="{{ path("article_add") }}">Créer un nouvel article</a><hr>
	<div class="well">
	<ul>
	{% for article in articles %}
	<li>
	Id : {{ article.id }} <br>
	Auteur : {{ article.auteur.pseudo }} <br>
	Titre : {{ article.titre }} <br>
	Actions : <a href="{{ path("article_edit", {'id':article.id}) }}">Editer</a> -
	<a href="{{ path("article_delete", {'id':article.id}) }}">Supprimer</a><br>
	Contenu : {{ article.contenu }} <hr>
	</li>
	{% else %}
	<li>Aucun article trouvé</li>
	{% endfor %}
	</ul>
	</div>
{%  endblock %}